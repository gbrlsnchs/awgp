{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "directives/*": [
                "app/directives/*"
            ],
            "components/*": [
                "app/components/*"
            ],
            "modules/*": [
                "app/modules/*"
            ]
        },
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "src/main.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "angularCompilerOptions": {
        "skipMetadataEmit": true
    }
}
